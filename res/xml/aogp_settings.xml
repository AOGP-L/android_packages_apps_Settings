<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/aogp_settings" >
                 
    <!-- Animation -->
    <PreferenceScreen
           android:id="@+id/animation"
           android:title="@string/aogp_animation"
           android:fragment="com.android.settings.aogp.AOGPAnimation"
           android:icon="@drawable/ic_listview" />
    
    <!-- Status Bar-->
    <PreferenceScreen
           android:id="@+id/status_bar_settings"
           android:title="@string/status_bar_title"
           android:fragment="com.android.settings.cyanogenmod.StatusBarSettings"
           android:icon="@drawable/ic_statusbar" />
             
    <!-- Miscellaneous -->
    <PreferenceScreen
         android:id="@+id/misc_settings"
         android:title="@string/misc_title"
         android:fragment="com.android.settings.aogp.AOGPMisc"
         android:icon="@drawable/ic_settings_more" />
         
    <!-- AOGP Downloads  -->
    <PreferenceScreen    
        android:key="download_center"
        android:fragment="com.android.settings.aogp.Download"
        android:title="@string/download_category"
        android:summary="@string/download_category_summary" 
	    android:icon="@drawable/ic_download" />     
         
    <!-- Change Log -->
    <PreferenceScreen android:key="changelog"
         android:title="@string/changelog_title"
         android:icon="@drawable/ic_changelog"
         android:fragment="com.android.settings.aogp.ChangeLog" />  

    <!-- Clock Style -->
        <PreferenceScreen
            android:key="clock_style_pref"
            android:fragment="com.android.settings.aogp.StatusBarClockStyle"
            android:title="@string/status_bar_clock" />   

</PreferenceScreen>
